<Configuration status="WARN">
    <Appenders>
        <File name="MailLog" fileName="logs/mail.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="services.email.sender" level="info" additivity="false">
            <AppenderRef ref="MailLog"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>