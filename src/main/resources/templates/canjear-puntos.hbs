{{#partial "estilo"}}
    <link rel="stylesheet" href="/css/canjear-puntos.css">
{{/partial}}

{{#partial "cuerpo"}}
    <div class="main-content__titulo">
        <h2>Puntos Acumulados:</h2>
        <h2>XXXX (todavia no esta viene cuando tengamos la sesion del que entra)</h2>
    </div>

    <div class="services-container" id="services-container">
        {{#each ofertas}}
            <div class="service-rectangle">
                <img src="{{this.imagenIlustrativa}}" alt="Service Image" class="service-image">
                <p class="service-name">{{this.nombre}}</p>
                <p class="service-description">{{this.descripcion}}</p>
                <p class="service-points">{{this.puntosNecesarios}} pts <span
                        class="redeem-button">Canjear</span></p>
            </div>
        {{/each}}
    </div>
{{/partial}}

{{> templates/base }}