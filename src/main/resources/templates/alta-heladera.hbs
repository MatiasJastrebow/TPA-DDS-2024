{{#partial "cuerpo"}}
    <div class="container mt-5">
        <h2>Dar de Alta Heladera</h2>

        <!-- Formulario de Alta de Heladera -->
        <form>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nombreHeladera" class="form-label">Nombre de la Heladera *</label>
                    <input type="text" class="form-control" id="nombreHeladera"
                           placeholder="Ingresar nombre" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="modeloHeladera" class="form-label">Modelo de la Heladera *</label>
                    <input type="text" class="form-control" id="modeloHeladera"
                           placeholder="Ingresar modelo" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="direccionHeladera" class="form-label">Dirección *</label>
                    <input type="text" class="form-control" id="direccionHeladera"
                           placeholder="Ingresar dirección" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="fechaAltaHeladera" class="form-label">Fecha de Alta *</label>
                    <input type="date" class="form-control" id="fechaAltaHeladera" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="minTempHeladera" class="form-label">Temperatura Mínima *</label>
                    <input type="number" step="1" class="form-control" id="minTempHeladera"
                           placeholder="Ingresar temperatura mínima" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="maxTempHeladera" class="form-label">Temperatura Máxima *</label>
                    <input type="number" step="1" class="form-control" id="maxTempHeladera"
                           placeholder="Ingresar temperatura máxima" required>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Registrar Heladera</button>
            </div>
        </form>
    </div>
{{/partial}}


