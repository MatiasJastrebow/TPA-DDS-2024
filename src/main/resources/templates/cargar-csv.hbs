{{#partial "estilo"}}
    <link rel="stylesheet" href="/css/cargar-csv.css">
{{/partial}}

{{#partial "cuerpo"}}
    <h2>Cargar archivo CSV</h2>
    <form method="POST" enctype="multipart/form-data">
        <input class="form-control form-control-lg" placeholder=".csv" type="file" accept=".csv" name="csv" required>
        <button type="submit" class="btn btn-primary">Subir</button>
    </form>

    <!-- Modal Error Colaboracion -->
    <div class="modal fade" id="invalidFile" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLongTitle">¡Ups! Surgió un Problema</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4 id="mensajeError">Ingrese un archivo válido</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary largo" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

{{#partial "scripts"}}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Lee los parámetros de la URL
            const params = new URLSearchParams(window.location.search);

            // Si el parámetro "success" es "true", mostramos el modal
            if (params.get("invalidFile") === "true") {
                $('#invalidFile').modal('show');
            }
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{{/partial}}

{{> templates/base }}
