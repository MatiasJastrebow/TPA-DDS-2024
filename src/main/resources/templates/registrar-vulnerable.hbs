{{#partial "estilo"}}
    <link rel="stylesheet" href="css/registrar-vulnerable.css">
{{/partial}}

{{#partial "cuerpo"}}
    <div class="container mt-5">
        <h2>Registrar Persona Vulnerable</h2>
        <form id="form-vulnerable">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nombreVulnerable" class="form-label">Nombre *</label>
                    <input type="text" class="form-control" id="nombreVulnerable" placeholder="Ingresar nombre" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="apellidoVulnerable" class="form-label">Apellido *</label>
                    <input type="text" class="form-control" id="apellidoVulnerable" placeholder="Ingresar apellido" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="tipoDocumentoVulnerable" class="form-label">Tipo de Documento *</label>
                    <select class="form-select" id="tipoDocumentoVulnerable">
                        <option selected>DNI</option>
                        <option value="1">Otro</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="numeroDocumentoVulnerable" class="form-label">Nro de Documento *</label>
                    <input type="text" class="form-control" id="numeroDocumentoVulnerable" placeholder="Ingrese sin puntos ni espacios" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="provinciaVulnerable" class="form-label">Provincia</label>
                    <select class="form-select" id="provinciaVulnerable">
                        <option selected>Buenos Aires</option>
                        <option value="1">Otra</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="ciudadVulnerable" class="form-label">Ciudad</label>
                    <input type="text" class="form-control" id="ciudadVulnerable" placeholder="Ingresar ciudad" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="barrioVulnerable" class="form-label">Barrio</label>
                    <input type="text" class="form-control" id="barrioVulnerable" placeholder="Ingresar barrio" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="direccionVulnerable" class="form-label">Dirección (Calle y Número)</label>
                    <input type="text" class="form-control" id="direccionVulnerable" placeholder="ej: Malabia 500" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="cantidadMenoresVulnerable" class="form-label">Cantidad de Menores a Cargo</label>
                    <select class="form-select" id="cantidadMenoresVulnerable">
                        <option selected>Cantidad</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
            </div>
        </form>
    </div>
{{/partial}}

{{> templates/base }}
