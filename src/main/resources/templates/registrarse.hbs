                    <label for="contraseniaJuridico" class="form-label">Contraseña *</label>
                    <input name="contraseniaJuridico" type="text" class="form-control" id="contraseniaJuridico"
                           placeholder="Ingresar contraseña" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nombreEmpresa" class="form-label">Nombre *</label>
                    <input type="text" class="form-control" id="nombreEmpresa"
                           placeholder="Ingresar nombre" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="razonSocial" class="form-label">Razón Social *</label>
                    <input type="text" class="form-control" id="razonSocial"
