                <div class="col-md-6 mb-3">
                    <label for="provinciaJuridica" class="form-label">Provincia</label>
                    <select class="form-select" id="provinciaJuridica">
                        <option selected>Buenos Aires</option>
                        <option value="1">Otra</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="ciudadJuridica" class="form-label">Ciudad</label>
                    <input type="text" class="form-control" id="ciudadJuridica"
                           placeholder="ej: CABA">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="barrioJuridica" class="form-label">Barrio</label>
                    <input type="text" class="form-control" id="barrioJuridica"
                           placeholder="ej: Villa Crespo">
                </div>
            </div><div class="row">
            <div class="col-md-6 mb-3">
                <label for="calleJuridica" class="form-label">Calle</label>
                <input type="text" class="form-control" id="calleJuridica"
                       placeholder="ej: Malabia">
            </div>
            <div class="col-md-6 mb-3">
                <label for="numeroJuridico" class="form-label">Numero</label>
                <input type="text" class="form-control" id="numeroJuridico"
                       placeholder="ej: 500">
            </div>
        </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>

