<Configuration status="WARN">
    <Appenders>
        <File name="MailLog" fileName="logs/mail.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="modules.email.sender" level="info" additivity="false">
            <AppenderRef ref="MailLog"/>
        </Logger>
        <Logger name="org.eclipse.jetty" level="off" additivity="false" />

        <!-- Deshabilitar logs de Javalin -->
        <Logger name="io.javalin" level="off" additivity="false" />

        <!-- ConfiguraciÃ³n global -->
        <Root level="warn">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>